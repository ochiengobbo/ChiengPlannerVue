<div class="notes-sidebar">
    <a asp-controller="Notes" asp-action="EditNote" class="notes-add" type="button" style="text-align: center;"><i class="fa-solid fa-plus"></i></a>
    <div class="notes-list">
        @foreach (var note in Model.Notes)
        {
            <div class="notes-list-item" data-id=@note.NotesId>
                <div class="d-inline right">
                    <button class="btn btn-secondary" type="button" style="text-align: center;" id="deleteNoteSidebar" data-id=@note.NotesId>
                        <i class="fa-solid fa-trash-can"></i>
                    </button>
                </div>
                <div class="notes-small-title">@note.Title</div>
                <div class="notes-small-body">@note.PlainText</div>
                <div class="notes-small-updated">@note.ModifiedDate</div>
            </div>
        }
    </div>
</div>

<div id="deletedNoteSuccessModal" class="modal" data-backdrop="false" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content bg-success">
            <div class="modal-body text-white">
                <p class="d-inline" style="opacity: .75">Note was succesfully deleted.</p>
                <button type="button" id="deletedNoteClose" class="close" aria-label="Close" style="color: white;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        </div>
    </div>
</div>

