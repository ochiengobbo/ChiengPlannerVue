<div class="notes-sidebar">
    <a asp-controller="Notes" asp-action="EditNote" class="notes-add" type="button" style="text-align: center;"><i class="fa-solid fa-plus"></i></a>
    <div class="notes-list">
        @foreach (var note in Model.Notes)
        {
            <div class="notes-list-item d-inline-flex" data-id=@note.NotesId>
                <div>
                    <div class="notes-small-title"><b>@note.Title</b></div>
                    @if (note.PlainText.Length > 120)
                    {
                        <div class="notes-small-body">@(note.PlainText.Substring(0, 120) + "...")</div>
                    }
                    else
                    {
                        <div class="notes-small-body">@note.PlainText</div>
                    }
                    <div class="notes-small-updated">@note.ModifiedDate</div>
                </div>
                <div style="margin-top: 35px;">
                    <button class="btn btn-outline-dark text-danger delete-note-sidebar" type="button" style="text-align: center;" data-id=@note.NotesId>
                        <i class="fa-solid fa-trash-can"></i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>


