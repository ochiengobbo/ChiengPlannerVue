@model ChiengPlannerVue.Models.Checklists.Checklist;

<div style="margin: 5%;">
    <div style="margin: 10%; margin-bottom: 5%;">
        <input id="ChecklistName" class="mx-auto form-control-lg inputGroup-sizing-lg border border-secondary border-1"
               type="text" value="@Model.Name" placeholder="Checklist Name" style="width: 100%;" />
